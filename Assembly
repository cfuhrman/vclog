email:
  mailto:
   - ruby-talk@ruby-lang.org
   - rubyworks-mailinglist@googlegroups.com

gem:
  active: true

github:
  folder: web

dnote:
  title: Source Notes
  output: log/notes.html
  files: lib/**/*.rb

locat:
  output: log/locat.html

vclog:
  output:
    - web/log/history.html
    - web/log/changes.html
    - web/eg/history.html
    - web/eg/changes.html
    - web/eg/history.rdoc
    - web/eg/changes.rdoc
    - web/eg/history.atom
    - web/eg/changes.atom
    - web/eg/history.rss
    - web/eg/changes.rss

ronn:
  service  : custom
  cycle    : main
  document : |
    system 'ronn --manual="VCLog" --organization="RubyWorks" --style="toc" man/man1/*.ronn'
    system 'cp man/man1/*.html web/man/'

