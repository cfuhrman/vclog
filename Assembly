gem:
  active: true

github:
  folder: pages

dnote:
  output: pages/log/notes.html

locat:
  output: pages/log/locat.html

vclog:
  output:
    - pages/log/history.html
    - pages/log/changes.html
    - pages/eg/history.html
    - pages/eg/changes.html
    - pages/eg/history.rdoc
    - pages/eg/changes.rdoc
    - pages/eg/history.atom
    - pages/eg/changes.atom
    - pages/eg/history.rss
    - pages/eg/changes.rss

ronn:
  service  : custom
  cycle    : main
  document : |
    system 'ronn --manual="VCLog" --organization="RubyWorks" --style="toc" man/man1/*.ronn'
    system 'cp man/man1/*.html pages/man/'

