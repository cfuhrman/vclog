---
email:
  service : Email
  file    : ~
  subject : ~
  mailto  :
   - ruby-talk@ruby-lang.org
   - rubyworks-mailinglist@googlegroups.com
  active  : true

gemcutter:
  service : GemCutter
  active  : true

grancher:
  service: Grancher
  active : true

box:
  service : Box
  types   : [gem]
  active  : true

rdoc:
  service : RDoc
  template: redfish
  include : ~
  exclude : [Syckfile, REQUIRE, VERSION, PROJECT]
  output  : site/doc/api
  active  : true

ridoc:
  service : RIDoc
  include : ~
  exclude : ~
  output  : ri
  active  : true

dnote:
  service : DNote
  files   : [lib]
  labels  : ~
  output  : ~
  active  : true

stats:
  service  : Stats
  title    : ~
  loadpath : ~
  exclude  : ~
  output   : ~
  active   : true

vclog-history:
  service  : VCLog
  type     : history
  format   : atom, rss, rdoc, html
  output   : ~
  active   : true

vclog-changelog:
  service  : VCLog
  type     : changelog
  format   : atom, rss, rdoc, html
  output   : ~
  active   : true

ronn:
  service  : custom
  cycle    : main
  document : |
    system 'ronn --manual="VCLog" --organization="RubyWorks" --style="toc" ronn/*.ronn'
    system 'mv ronn/*.1 man/man1/'
    system 'mv ronn/*.html site/doc/man/'

